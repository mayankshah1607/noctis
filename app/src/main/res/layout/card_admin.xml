<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    android:elevation="90dp"
    android:layout_margin="8dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#11000000"
        android:padding="8dp">

        <TextView
            android:id="@+id/nametext"
            android:text="Mayank M Shah"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="23sp"
            android:textAllCaps="true"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="From"
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:textColor="#000000"
            android:textSize="23sp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"/>
        <TextView
            android:text="Till"
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:textColor="#000000"
            android:textSize="23sp"
            android:textStyle="bold"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fromdatetext"
                android:text="23-01-2018"
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/todatetext"
                android:text="25-01-2018"
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                android:textColor="#000000"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fromtimetext"
                android:text="21:00 HRS"
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/totimetext"
                android:text="02:00 HRS"
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                android:textColor="#000000"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <TextView
                android:text="Email:"
                android:layout_height="wrap_content"
                android:layout_width="60dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/emailtext"
                android:text="mayank@gmail.com"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Mobile:"
                android:layout_height="wrap_content"
                android:layout_width="60dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/numtext"
                android:text="9789534440"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Room:"
                android:layout_height="wrap_content"
                android:layout_width="60dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/roomtext"
                android:text="N-408"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:textSize="18sp"/>
        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>